{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": "off",
		"spaced-comment": "error",
		"no-lonely-if": "error",
		"camelcase": ["error", {"properties": "always"}],
		"prefer-const": "error",
        "brace-style": "error",
        "no-unneeded-ternary": "error",
		"no-var": "error"
	}
}
